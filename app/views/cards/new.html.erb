<% provide(:title, "Cards") %>
<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | OPTIMIZR</title>
  </head>
  <body>

<div class="center jumbotron">
  <h3>Enter Spend</h3>

  <%= form_for @all_cards do |f| %>
  <%= f.label :spend %>
  <%= f.text_field :spend %>

  <%= f.submit  %>
<% end %>

</div>

<div class="center jumbotron">
  <h3>Card Value</h3>

  <p> eventually the card values will change based on the form, but for now just
    returning the cards in the database </p>


            <table id='cards-table' class="table table-hover">
              <thead  class="thead-light">
                <tr>
                  <th>Name</th>
                  <th>Card Type</th>
                  <th>Annual Fee</th>
                  <th>CashBack</th>
                  <th>Total Value</th>
                </tr>
              </thead>

              <tbody>
                <% @cards.each do |card| %>
                  <tr>
                    <td><%= card.name %></td>
                    <td><%= card.card_type %></td>
                    <td><%= card.annual_fee %></td>
                    <td><%= card.other_cash_rate %></td>
                    <td><%= card.other_cash_rate * 20000 /100 %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
</div>
</div>
