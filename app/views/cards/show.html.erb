<% provide(:title, "All Cards") %>

<div class="center jumbotron">
  <h3>All Cards</h3>
<p> <%= link_to "Add New Card", addcard_path, type: "button", class: "btn btn-primary btn-responsive-edit" %> </p>
            <table id='cards-table' class="table table-hover">
              <thead  class="thead-light">
                <tr>
                  <th>Name</th>
                  <th>Card Type</th>
                  <th>Annual Fee</th>
                  <th>CashBack</th>
                  <th>Edit</th>
                  <th>Delete</th>
                </tr>
              </thead>

              <tbody>
                <% @cards.each do |card| %>
                  <tr>
                    <td><%= card.name %></td>
                    <td><%= card.card_type %></td>
                    <td><%= card.annual_fee %></td>
                    <td><%= card.other_cash_rate %></td>
                    <td><%= link_to  edit_card_path(card.id), type: "button", class: "btn btn-primary btn-responsive-edit" do %>
            <i class="glyphicon glyphicon-cog"></i>
        <% end %>
                    <td>


       <%= button_to  card, method: :delete,  type: "button", class: "btn btn-danger btn-responsive" do %>
     <i class="glyphicon glyphicon-remove-circle"></i>
 <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>


</div>
