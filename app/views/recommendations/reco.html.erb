<% provide(:title, "Recommendations") %>


  <h3>Enter Spend</h3>
  <div class="row">

  <%= form_with scope: :spend, local: true do |form| %>


    <div class="col-lg-6">
      <%= form.label :grocery, 'Grocery' %>:
      <%= form.number_field :grocery %>
    </div>
  	<div class="col-lg-6">
   <%= form.label :total, 'Total' %>:
   <%= form.number_field :total %>
 </div>
     <div class="col-lg-12">
  	<%= form.submit "Run It", class: "btn btn-primary" %>
  	</div>
  </div>



  <% end %>
</br>

<div class="center jumbotron">
  <h3>Card Value</h3>

  <p> Values based on <%= @grocery %> grocery spend and <%= @total %> of total spend </p>


            <table id='cards-table' class="table table-hover">
              <thead  class="thead-light">
                <tr>
                  <th>Name</th>
                  <th>Card Type</th>
                  <th>Annual Fee</th>
                  <th>CashBack</th>
                  <th>Grocery Value</th>
                  <th>Total Value</th>
                </tr>
              </thead>

              <tbody>
                <% @cards.each do |card| %>
                  <tr>
                    <td><%= card.name %></td>
                    <td><%= card.card_type %></td>
                    <td><%= card.annual_fee %></td>
                    <td><%= card.other_cash_rate %></td>
                    <td><%= card.other_cash_rate * @grocery / 100 %></td>
                    <td><%= card.other_cash_rate * @total / 100 %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>


</div>
